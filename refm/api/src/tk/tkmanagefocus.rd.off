  module Tk
    def Tk.focus_to(to)
      tk_call 'focus', to
    end
    def Tk.focus_prev(window)
      TkManageFocus.prev window
    end
    def Tk.focus_next(window)
      TkManageFocus.next window
    end
  end
  class TkWindow
    def focus_to_prev
      Tk.focus_to Tk.focus_prev self
    end
    def focus_to_next
      Tk.focus_to Tk.focus_next self
    end
  end

