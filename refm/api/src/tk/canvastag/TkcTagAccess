--- bind(seq, *args)
#@todo

  def bind(seq, cmd=Proc.new, *args)
  
    @c.itembind(@id, seq, cmd, *args)
    self
  
  end

--- bind_append(seq, *args)
#@todo

  def bind_append(seq, cmd=Proc.new, *args)
  
    @c.itembind_append(@id, seq, cmd, *args)
    self
  
  end

